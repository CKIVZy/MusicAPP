.recommendSong .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.recommendSong .header image {
    width: 100%;
    height: 100%;
}

.recommendSong .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-140rpx, -40rpx);
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.header .date .month {
    font-size: 38rpx;
}

/* 内容区 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: #fff;
}

.listenHeader {
    height: 80rpx;
    line-height: 80rpx;
}
.listScroll{
    height: calc(100vh - 380rpx);
}
.listContainer .changeMore {
    float: right;
}
.scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}